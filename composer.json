{
    "name"       : "hoathis/symfony-resource-locator-bundle",
    "description": "Symfony 2 resource locator bundle based on Hoa protocols.",
    "type"       : "symfony-bundle",
    "keywords"   : ["library", "hoa", "bundle", "symfony", "protocol", "locator"],
    "homepage"   : "http://hoa-project.net/",
    "license"    : "BSD-3-Clause",
    "authors"    : [
        {
            "name" : "Julien Bianchi",
            "email": "julien.bianchi@hoa-project.net"
        },
        {
            "name" : "Ivan Enderlin",
            "email": "ivan.enderlin@hoa-project.net"
        },
        {
            "name"    : "Hoa community",
            "homepage": "http://hoa-project.net/"
        }
    ],
    "support": {
        "email" : "support@lists.hoa-project.net",
        "irc"   : "irc://irc.freenode.org/hoaproject",
        "source": "http://git.hoa-project.net/"
    },
    "require": {
        "php"                         : ">=5.3.3",
        "hoa/core"                    : ">=1.0,<3.0",
        "symfony/http-kernel"         : ">=2.3.6,<2.6.0",
        "symfony/config"              : ">=2.3.6,<2.6.0",
        "symfony/dependency-injection": ">=2.3.6,<2.6.0",
        "twig/twig"                   : "~1.0"
    },
    "require-dev": {
        "atoum/atoum": "dev-master"
    },
    "target-dir": "Hoathis/Bundle/ResourceLocatorBundle",
    "autoload"  : { "psr-0": { "Hoathis\\Bundle\\ResourceLocatorBundle": "." } },
    "config"    : {
        "bin-dir": "bin/"
    }
}
